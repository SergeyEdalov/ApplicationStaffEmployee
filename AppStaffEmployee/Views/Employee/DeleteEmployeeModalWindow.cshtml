@model AppStaffEmployee.ViewModels.EmployeeViewModel

<!-- Модальное окно удаление сотрудника -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletemodallabel">Удаление сотрудника</h5>
            </div>
            <div class="modal-body">
                Вы уверены, что хотите удалить @Html.DisplayFor(model => model.FullName)</strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Назад</button>
                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Удалить" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>