<form asp-action="Index" method="get">
    <p>
        Search: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" />
    </p>
    <p>
        Sort by:
        <select name="sortField">
            <option value="FullName">Name</option>
            <option value="Salary">Salary</option>
            <!-- Add more options as needed -->
        </select>
        Order:
        <select name="sortOrder">
            <option value="asc">Ascending</option>
            <option value="desc">Descending</option>
        </select>
        <input type="submit" value="Sort" />
    </p>
</form>


@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Идентификатор</th>
                <th>Ф.И.О.</th>
                <th>Дата рождения</th>
                <th>Отдел</th>
                <th>Должность</th>
                <th>Дата начала работы</th>
                <th>Заработная плата</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="text-danger">
                            <i class="fa fa-trash-alt"></i>
                        </a>
                    </td>
                    <td>@employee.Id</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id">@employee.FullName</a>
                    </td>
                    <td>@employee.Birthday</td>
                    <td>@employee.Department</td>
                    <td>@employee.JobTitle</td>
                    <td>@employee.WorkStart</td>
                    <td>@employee.Salary</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id">
                            <i class="fa fa-user-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Сотрудники отсутствют</p>
}