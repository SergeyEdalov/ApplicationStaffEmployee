@model IEnumerable<AppStaffEmployee.ViewModels.EmployeeViewModel>
@{
    ViewBag.Title = "Сотрудники";
}

<table class="table">
    <thead>
        <tr>
            <th>Идентификатор</th>
            <th>Ф.И.О.</th>
            <th>Дата рождения</th>
            <th>Отдел</th>
            <th>Должность</th>
            <th>Дата начала работы</th>
            <th>Заработная плата</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.Id">@employee.FullName</a>
                </td>
                <td>@employee.Birthday</td>
                <td>@employee.Department</td>
                <td>@employee.JobTitle</td>
                <td>@employee.WorkStart</td>
                <td>@employee.Salary</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id">edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>