@model AppStaffEmployee.ViewModels.Identity.RegisterUserViewModel
@{
    ViewData["Title"] = "Регистрация нового пользователя";
}

<h1 class="mb-3 fw-normal">Регистрация</h1>

<div class="form-signin">
    <form asp-action="Register">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating">
            <input asp-for="UserName" class="form-control" placeholder="Login"/>
            <label asp-for="UserName"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Password" class="form-control" placeholder="Login" />
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="PasswordConfirmed" class="form-control" placeholder="Login" />
            <label asp-for="PasswordConfirmed"></label>
            <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Регистрация</button>
    </form>
</div>

@section Styles 
{
    <link rel="stylesheet" href="~/css/SignInForm.css" />
}
